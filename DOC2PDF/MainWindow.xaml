<Window x:Class="DOC2PDF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MS Word to PDF Conversion" Height="350" Width="525">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="51*"/>
            <ColumnDefinition Width="79*"/>
            <ColumnDefinition Width="387*"/>
        </Grid.ColumnDefinitions>
        <TextBox Height="32" HorizontalAlignment="Left" Margin="19,88,0,0" Name="FileNameTextBox"
                 VerticalAlignment="Top" Width="393" Grid.ColumnSpan="3" />
        <Button Content="Browse" Height="32" HorizontalAlignment="Left" Margin="287.672,88,0,0"
                Name="btnBrowse" VerticalAlignment="Top" Width="88" Click="btnBrowse_Click" Grid.Column="2"  />
        <Button Content="Convert" HorizontalAlignment="Left" Margin="287.672,150,0,0" VerticalAlignment="Top" Width="88" Height="33" x:Name="btnConvert" Click="btnConvert_Click" Grid.Column="2" RenderTransformOrigin="0,0.5"/>
        <TextBox HorizontalAlignment="Left" Height="33" Margin="23,150,0,0" TextWrapping="Wrap" x:Name="pdfFileName" VerticalAlignment="Top" Width="389" Grid.ColumnSpan="3"/>
        <Label Content="Word to PDF Conversion" HorizontalAlignment="Left" Margin="7.672,22,0,0" VerticalAlignment="Top" Height="35" Width="227" FontSize="20" Grid.Column="2"/>
    </Grid>
</Window>
